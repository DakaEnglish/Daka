.container{
  background:#fff;
}
.ar_coverpath{
  width:100%;
  margin:0;
  box-sizing:border-box;
}
.ar_coverpath image{
  width:100%;
  height:390rpx;
}
.ar_cont{
  padding:0rpx 60rpx;
  font-size:35rpx;
  background: #fff;
  margin-bottom:40rpx;
  line-height: 45rpx;
  color:#666666;
  text-align: center; 
}
.ar_cont .ar_cont_h1,
.ar_cont .ar_cont_price{
  font-size: 40rpx;
  font-weight: 600;
  line-height: 64rpx;
  color:#000;
}
.ar_cont .ar_cont_price{
  color: #666666;
  font-size:35rpx;
  font-weight: 400;
}
.ar_line{
  width:100%;
  height:1rpx;
  content: '';
  background: #ddd;
  margin:30rpx 0rpx;
}
.ar_book{
  background:#FFC125;
  font-size: 40rpx;
  color:#fff;
  border-radius: 10rpx;
  margin:0rpx 0rpx 40rpx;
  align-items:stretch;
}