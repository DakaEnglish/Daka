<!--miniprogram/pages/signup/signup.wxml-->
<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">欢迎使用本APP</h2>
			<view class="weui-form__desc">请填写以下信息进行注册</view>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">联系电话</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写要绑定的电话" bindinput='getNum' type="number" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">							
                            <label class="weui-label">其他信息</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="邀请码" bindinput='otherthing' />
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="weui-form__tips-area">
			<view class="weui-form__tips">
                
			</view>
		</view>
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary" bindtap='signup'>确定</a>
		</view>
		<view class="weui-form__tips-area">
			<view class="weui-form__tips">
                
			</view>
		</view>
		<view class="weui-form__extra-area">
			<view class="weui-footer">
				<view class="weui-footer__text">Copyright © 2008-2020 搞事情</view>
			</view>
		</view>
	</view>
</view>

