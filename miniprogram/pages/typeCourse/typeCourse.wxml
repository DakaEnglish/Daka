<view class="container">
  <button class="{{type==1?'title_check':'title_normal'}}" bindtap="IELTS" >雅 思</button>
  <button class="{{type==2?'title_check':'title_normal'}}" bindtap="TOEFL" >托 福</button>
  <button class="{{type==3?'title_check':'title_normal'}}" bindtap="interview">面 试</button>
  <button class="{{type==4?'title_check':'title_normal'}}" bindtap="business">商 务</button>
</view>

<view wx:for="{{topic}}">
  <view wx:if="{{type==1}}">
    <button bindtap="jump" style="width:720rpx">{{item}}</button>
  </view>
  <view wx:else>
    <view>开发中请期待</view>
  </view>
</view>
