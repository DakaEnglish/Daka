<!--miniprogram/pages/course/course.wxml-->
<view>今日课程</view>
<view wx:if="{{ todayEmpty === 1 }}">
	<view class="nav_section">
		<block wx:for="{{courseList}}" wx:key="key">
    <view wx:if="{{item.type === 1}}">
			<view>教师：{{item.teachername}}</view>
			<image src="{{item.teacherimage}}"></image>
			<view>
				<block>{{item.dateInfo.year}}年</block>
				<block>{{item.dateInfo.month}}月</block>
				<block>{{item.dateInfo.day}}日</block>
			</view>
			<view>{{item.week}}</view>
			<view>{{item.time}}</view>
			 </view>
		</block>
	</view>
</view>
<view wx:elif="{{todayEmpty === 0}}">
    您没有课程
  </view>
<view>预约课程</view>
<view wx:if="{{ otherTimeEmpty === 1}}">
	<view class="nav_section">
		<block wx:for="{{courseList}}" wx:key="key">
		<block wx:if="{{item.type === 2}}">
			<view>教师：{{item.teachername}}</view>
			<image src="{{item.teacherimage}}"></image>
			<view>
				<block>{{item.dateInfo.year}}年</block>
				<block>{{item.dateInfo.month}}月</block>
				<block>{{item.dateInfo.day}}日</block>
			</view>
			<view>{{item.week}}</view>
			<view>{{item.time}}</view>
			</block>
		</block>
	</view>
</view>
<view wx:elif="{{otherTimeEmpty === 0}}">
    您没有课程
  </view>